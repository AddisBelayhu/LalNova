# Production Environment Variables
NODE_ENV=production

# Database
DATABASE_URL="file:./prod.db"

# JWT Secret (CHANGE THIS TO A STRONG SECRET)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Admin Credentials (CHANGE THESE)
ADMIN_EMAIL=admin@lalnova.com
ADMIN_PASSWORD=your-secure-admin-password

# Server Configuration
PORT=5000

# CORS Origins (Replace with your actual domain)
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: IP Whitelist for Admin Access (comma-separated)
# ADMIN_IP_WHITELIST=192.168.1.100,203.0.113.1

# Security Headers
HELMET_CSP_ENABLED=true